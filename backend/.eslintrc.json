{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "rules": {
        // force single quote
        "quotes": ["error", "single"],

        "linebreak-style": 0,


        // remove semi-columns
        "semi": ["error", "never"],
        // force indent 2 spaces
        "indent": ["error", 2],
        // allow console.log
        "no-console": "off"
    }
}